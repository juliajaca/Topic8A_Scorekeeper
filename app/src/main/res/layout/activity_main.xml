<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height ="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            style="@style/MinusButtons"
            android:id="@+id/botonMenosEquipo1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/anchura_boton"
            android:layout_height="@dimen/altura_boton"/>

        <ImageButton
            style="@style/PlusButtons"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/botonMasEquipo1"
            android:layout_width="@dimen/anchura_boton"
            android:layout_height="@dimen/altura_boton" />

        <TextView
            android:text="0"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/puntuacion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ScoreText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/team_1"
            style = "@style/TeamText"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_2"
            style = "@style/TeamText"/>

        <ImageButton
            style="@style/MinusButtons"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/botonMenosEquipo2"
            android:layout_width="@dimen/anchura_boton"
            android:layout_height="@dimen/altura_boton" />

        <TextView
            android:text="@string/_0"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/puntuacion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/ScoreText"/>

        <ImageButton
            style="@style/PlusButtons"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/botonMasEquipo2"
            android:layout_width="@dimen/anchura_boton"
            android:layout_height="@dimen/altura_boton" />
    </RelativeLayout>


</LinearLayout>